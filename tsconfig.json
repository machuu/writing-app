{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "public",
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "types": ["core-js", "node"],
	"baseUrl": ".",
	"paths": [
		"src"
	]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

