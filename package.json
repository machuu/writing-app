{
  "name": "writing-app",
  "version": "1.0.0",
  "description": "Minimal web interface for writing stories.",
  "main": "express.js",
  "scripts": {
    "build": "browserify -p tslintify -p tsify src/index.ts -o public/app.bundle.js",
    "build-debug": "npm run browserify --debug",
    "watchify": "watchify -v -p tslintify -p tsify src/index.ts -o public/app.bundle.js",
    "watchify-debug": "npm run watchify --debug",
    "start": "node express.js",
    "start-bg": "node express.js &",
    "debug": "DEBUG=writing-app:server node express.js",
    "compile": "tsc",
    "lint": "tslint src/**/*.ts",
    "test": "ts-mocha"
  },
  "dependencies": {
    "@editorjs/editorjs": "~2.15.1",
    "@types/core-js": "^2.5.2",
    "cookie-parser": "~1.4.4",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "pouchdb": "^7.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.4",
    "@types/expect": "^1.20.4",
    "@types/karma": "^3.0.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.0",
    "@types/pouchdb": "^6.4.0",
    "browserify": "^16.5.0",
    "chai": "^4.2.0",
    "debug": "~2.6.9",
    "karma": "^4.4.1",
    "mocha": "^6.2.2",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.4.1",
    "tsify": "~4.0.1",
    "tslint": "^4.0.0",
    "tslintify": "^2.0.2",
    "typescript": "^2.9.2",
    "watchify": "^3.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/machuu/writing-app.git"
  },
  "author": "",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/machuu/writing-app/issues"
  },
  "homepage": "https://github.com/machuu/writing-app#readme"
}
